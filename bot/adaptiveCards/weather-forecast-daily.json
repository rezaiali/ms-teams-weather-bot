{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "speak": "<s>Weather forecast for ${formatEpoch(data[0].sunrise_ts, 'dddd')} is high of ${formatNumber(data[0].app_max_temp, 0)}°${tempUnit} and low of ${formatNumber(data[0].app_min_temp, 0)}°${tempUnit} degrees with a ${formatNumber(data[0].precip * 100, 0)}% chance of rain</s><s>Winds will be ${formatNumber(data[0].wind_gust_spd, 0)} ${windSpeedUnit} from the ${data[0].wind_cdir}</s>",
  "backgroundImage": {
    "url": "https://messagecardplayground.azurewebsites.net/assets/Mostly%20Cloudy-Background.jpg"
  },
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": 35,
          "items": [
            {
              "type": "Image",
              "url": "http://openweathermap.org/img/wn/${current.weather[0].icon}@2x.png",
              "size": "Stretch"
            }
          ]
        },
        {
          "type": "Column",
          "width": 65,
          "items": [
            {
              "type": "TextBlock",
              "text": "${loc}",
              "weight": "Bolder",
              "size": "Large",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "{{DATE(${formatEpoch(daily[0].dt, 'yyyy-MM-ddTHH:mm:ssZ')}, SHORT)}}",
              "size": "Large",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${formatNumber(daily[0].temp.min, 0)}°${tempUnit} / ${formatNumber(daily[0].temp.max, 0)}°${tempUnit}",
              "size": "Medium",
              "spacing": "None",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "${formatNumber(daily[0].pop * 100, 0)}% chance of rain",
              "spacing": "None",
              "wrap": true
            },
            {
              "type": "TextBlock",
              "text": "Winds ${daily[0].wind_speed} ${windSpeedUnit} ${daily[0].wind_cdir}",
              "spacing": "None",
              "wrap": true
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "$data": "${data}",
          "$when": "${$index != 0 && $index < 4}",
          "type": "Column",
          "width": 20,
          "items": [
            {
              "type": "TextBlock",
              "horizontalAlignment": "Center",
              "text": "${formatEpoch(dt, 'dddd')}",
              "wrap": true
            },
            {
              "type": "Image",
              "url": "http://openweathermap.org/img/wn/${weather[0].icon}@2x.png"
            },
            {
              "type": "FactSet",
              "horizontalAlignment": "Right",
              "facts": [
                {
                  "title": "High",
                  "value": "${formatNumber(temp.max, 0)}°${tempUnit}"
                },
                {
                  "title": "Low",
                  "value": "${formatNumber(temp.min, 0)}°${tempUnit}"
                },
                {
                  "title": "Note",
                  "value": "${weather[0].main}"
                }
              ]
            }
          ],
          "selectAction": {
            "type": "Action.OpenUrl",
            "title": "View ${formatEpoch(dt, 'dddd')}",
            "url": "https://www.microsoft.com"
          }
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "$data": "${data}",
          "$when": "${$index >=4 && $index != 7}",
          "type": "Column",
          "width": 20,
          "items": [
            {
              "type": "TextBlock",
              "horizontalAlignment": "Center",
              "text": "${formatEpoch(dt, 'dddd')}",
              "wrap": true
            },
            {
              "type": "Image",
              "url": "http://openweathermap.org/img/wn/${weather[0].icon}@2x.png"
            },
            {
              "type": "FactSet",
              "horizontalAlignment": "Right",
              "facts": [
                {
                  "title": "High",
                  "value": "${formatNumber(temp.max, 0)}°${tempUnit}"
                },
                {
                  "title": "Low",
                  "value": "${formatNumber(temp.min, 0)}°${tempUnit}"
                },
                {
                  "title": "Note",
                  "value": "${weather[0].main}"
                }
              ]
            }
          ],
          "selectAction": {
            "type": "Action.OpenUrl",
            "title": "View ${formatEpoch(dt, 'dddd')}",
            "url": "https://www.microsoft.com"
          }
        }
      ]
    }
  ]
}
